{
  "info": {
    "_postman_id": "1b5054f4-c0c1-40c5-b717-84f3fc555393",
    "name": "API Products & Carts - Entrega 1",
    "description": "Colección Postman para probar API de Productos y Carritos con JWT + Refresh. Incluye auto-guardado de tokens en variables de colección.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "accessToken",
      "value": ""
    },
    {
      "key": "refreshToken",
      "value": ""
    },
    {
      "key": "username",
      "value": "admin"
    },
    {
      "key": "password",
      "value": "admin123"
    },
    {
      "key": "productId",
      "value": "1"
    },
    {
      "key": "cartId",
      "value": "1"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "let jsonData = {};",
                  "try { jsonData = pm.response.json(); } catch (e) {}",
                  "",
                  "// soporta respuesta {status, payload:{accessToken, refreshToken}} o {accessToken, refreshToken}",
                  "const access = (jsonData && jsonData.payload && jsonData.payload.accessToken) || jsonData.accessToken;",
                  "const refresh = (jsonData && jsonData.payload && jsonData.payload.refreshToken) || jsonData.refreshToken;",
                  "",
                  "if (access) pm.collectionVariables.set('accessToken', access);",
                  "if (refresh) pm.collectionVariables.set('refreshToken', refresh);",
                  "",
                  "pm.test('Tokens were stored in collection variables', function () {",
                  "  pm.expect(pm.collectionVariables.get('accessToken')).to.not.eql('');",
                  "  pm.expect(pm.collectionVariables.get('refreshToken')).to.not.eql('');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}"
            },
            "url": "{{baseUrl}}/api/login"
          }
        },
        {
          "name": "Refresh",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "let jsonData = {};",
                  "try { jsonData = pm.response.json(); } catch (e) {}",
                  "const access = (jsonData && jsonData.payload && jsonData.payload.accessToken) || jsonData.accessToken;",
                  "const refresh = (jsonData && jsonData.payload && jsonData.payload.refreshToken) || jsonData.refreshToken;",
                  "if (access) pm.collectionVariables.set('accessToken', access);",
                  "if (refresh) pm.collectionVariables.set('refreshToken', refresh);",
                  "",
                  "pm.test('New tokens were stored', function () {",
                  "  pm.expect(pm.collectionVariables.get('accessToken')).to.not.eql('');",
                  "  pm.expect(pm.collectionVariables.get('refreshToken')).to.not.eql('');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": "{{baseUrl}}/api/refresh"
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get all products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/products"
          }
        },
        {
          "name": "Get product by id",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/products/{{productId}}"
          }
        },
        {
          "name": "Create product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Teclado mec\\u00e1nico\",\n  \"description\": \"Switches lineales\",\n  \"code\": \"KB-001\",\n  \"price\": 1299.99,\n  \"status\": true,\n  \"stock\": 50,\n  \"category\": \"perifericos\",\n  \"thumbnails\": [\n    \"img/keyboard1.png\",\n    \"img/keyboard2.png\"\n  ]\n}"
            },
            "url": "{{baseUrl}}/api/products"
          }
        },
        {
          "name": "Update product",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price\": 1199.99,\n  \"stock\": 45\n}"
            },
            "url": "{{baseUrl}}/api/products/{{productId}}"
          }
        },
        {
          "name": "Delete product",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/products/{{productId}}"
          }
        }
      ]
    },
    {
      "name": "Carts",
      "item": [
        {
          "name": "Create cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/carts"
          }
        },
        {
          "name": "Get cart by id",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/carts/{{cartId}}"
          }
        },
        {
          "name": "Add product to cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/carts/{{cartId}}/product/{{productId}}"
          }
        }
      ]
    }
  ]
}